<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:amethyst_installer_gui">

    <SolidColorBrush x:Key="BrushBackgroundWindow" Color="#82282828" />
    
    <SolidColorBrush x:Key="BrushBackground" Color="#54343434" />
    <SolidColorBrush x:Key="BrushBackgroundAlt" Color="#75141414" />
    <SolidColorBrush x:Key="BrushForeground" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="BrushForegroundAlt" Color="#4CFFFFFF" />

    <SolidColorBrush x:Key="BrushLineSeparator" Color="#4CFFFFFF" />

    <SolidColorBrush x:Key="BrushAccent" Color="{x:Static local:WindowsColorHelpers.ColorAccentLight}" />

</ResourceDictionary>
