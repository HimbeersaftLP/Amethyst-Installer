<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:amethyst_installer_gui">

    <SolidColorBrush x:Key="BrushBackgroundWindow" Color="#E1E2E2E2" />

    <SolidColorBrush x:Key="BrushBackground" Color="#75898989" />
    <SolidColorBrush x:Key="BrushBackgroundAlt" Color="#75EBEBEB" />
    <SolidColorBrush x:Key="BrushForeground" Color="#FF000000" />
    <SolidColorBrush x:Key="BrushForegroundAlt" Color="#4C000000" />

    <SolidColorBrush x:Key="BrushLineSeparator" Color="#4C000000" />

    <SolidColorBrush x:Key="BrushAccent" Color="{x:Static local:WindowsColorHelpers.ColorAccentLight}" />

</ResourceDictionary>