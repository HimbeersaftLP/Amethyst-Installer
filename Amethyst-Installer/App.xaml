<Application
    x:Class="amethyst_installer_gui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml"
    Startup="Application_Startup"
    DispatcherUnhandledException="App_DispatcherUnhandledException">
 
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Globals.xaml" />
                <ResourceDictionary Source="Styles/Colours.xaml" />
                
                <ResourceDictionary Source="Styles/Titlebar.xaml" />
                <ResourceDictionary Source="Styles/ItemTask.xaml" />
                
                <ResourceDictionary Source="Styles/Button.xaml" />
                <ResourceDictionary Source="Styles/Textbox.xaml" />
                <ResourceDictionary Source="Styles/ScrollBar.xaml" />
                <ResourceDictionary Source="Styles/RadioButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
