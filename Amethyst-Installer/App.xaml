<Application x:Class="amethyst_installer_gui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:amethyst_installer_gui"
             StartupUri="MainWindow.xaml" Startup="Application_Startup">
    <Application.Resources>

        <FontFamily x:Key="SymbolThemeFontFamily">Segoe MDL2 Assets</FontFamily>

        <Style TargetType="{x:Type Button}" x:Key="TitlebarButton">
            <Setter Property="Foreground" Value="{x:Static local:WindowsColorHelpers.ButtonTransparentForeground}"/>
            <Setter Property="Background" Value="{x:Static local:WindowsColorHelpers.ButtonTransparentBackground}"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{x:Static local:WindowsColorHelpers.ButtonTransparentBorder}" CornerRadius="4" Padding="4 4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{x:Static local:WindowsColorHelpers.ButtonTransparentBackgroundHovered}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#AAFFFFFF"/>
                    <Setter Property="Background" Value="{x:Static local:WindowsColorHelpers.ButtonTransparentBackgroundHovered}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="WinUIButton">
            <Setter Property="Foreground" Value="{x:Static local:WindowsColorHelpers.ButtonForeground}"/>
            <Setter Property="Background" Value="{x:Static local:WindowsColorHelpers.ButtonBackground}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="12 4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Button.Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="4" Opacity="0.6" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{x:Static local:WindowsColorHelpers.ButtonBackgroundHovered}"/>
                    <Setter Property="Button.Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="6" BlurRadius="4" Opacity="0.7" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="#AAFFFFFF"/>
                    <Setter Property="Background" Value="{x:Static local:WindowsColorHelpers.ButtonBackgroundDisabled}"/>
                    <Setter Property="Button.Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" BlurRadius="4" Opacity="0.19" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
    </Application.Resources>
</Application>
